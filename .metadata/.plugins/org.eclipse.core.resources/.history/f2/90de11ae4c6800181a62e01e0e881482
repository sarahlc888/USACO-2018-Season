import java.io.IOException;

public class ModBinSearch2 {
	
	public static void main(String args[]) throws IOException {
		int[] arr1 = {1, 2, 3, 4};
		System.out.println(leastAbove(arr1, 4));
		
	}
	public static int greatestBelow(int[] arr, long val) {
		// returns greatest i <= X + R

		int lo = -1;
		int hi = arr.length-1;

		while (lo < hi) {
			int mid = (lo + hi + 1)/2;
			
			if (arr[mid] <= val) { // if mid is in range, increase
				lo = mid;
			} else { // mid is not in range, decrease
				hi = mid - 1;
			}
		}
		return hi;
		
	}
	public static int leastAbove(int[] arr, long val) {
		// returns smallest i >= X - R
		int lo = -1;
		int hi = arr.length-1;
		
		while (lo < hi) {
			int mid = (lo + hi + 1)/2;
			
			if (arr[mid] >= val) { // if mid is in range
				hi = mid;
			} else { // mid is not in range
				lo = mid + 1;
			}
		}
		return lo;
	}
	
}
